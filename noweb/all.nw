mzindex <- cbind(unlist(tapply(mzmat, mzgrp[mzmat], function(x) {
                                z <- unique(x)
                                rep(z, length(z))})),
                 unlist(tapply(mzmat, mzgrp[mzmat], function(x) {
                                z <- unique(x)
                                rep(z, each=length(z))})))
mzindex <- mzindex[mzindex[,1] != mzindex[,2],]
