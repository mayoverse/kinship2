        mo <- pedData$id[pedData$mother[i]]
        if(avail[pedData$id==fa] & avail[pedData$id==mo])
          {
            pedData$avail[i] <- FALSE
          }
      }
  }

  idTrim <- findUnavailable(ped, pedData$avail)
  return(idTrim)
